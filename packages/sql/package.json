{
  "name": "@rcompat/sql",
  "version": "0.1.0",
  "description": "rcompat sql module",
  "bugs": "https://github.com/rcompat/rcompat/issues",
  "license": "MIT",
  "files": [
    "/lib/**/*.js",
    "/lib/**/*.d.ts",
