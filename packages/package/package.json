{
  "name": "@rcompat/package",
  "version": "0.3.0",
  "description": "rcompat package module",
  "bugs": "https://github.com/rcompat/rcompat/issues",
  "license": "MIT",
  "files": [
    "/lib/**/*.js",
    "/lib/**/*.d.ts",
    "!/**/*.spec.*"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/rcompat/rcompat",
    "directory": "packages/package"
  },
  "scripts": {
    "build": "npm run clean && tsc",
    "clean": "rm -rf ./lib",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "@rcompat/cli": "workspace:^",
    "@rcompat/core": "workspace:^",
    "@rcompat/fs": "workspace:^",
    "@rcompat/invariant": "workspace:^"
  },
  "type": "module",
  "exports": {
    "./packager": {
      "@rcompat/live-types": "./src/packager/index.ts",
      "bun": "./lib/packager/bun.js",
      "deno": "./lib/packager/deno.js",
      "node": "./lib/packager/node.js"
    },
    "./*": {
      "@rcompat/live-types": "./src/default/*/index.ts",
      "default": "./lib/default/*/index.js"
    }
  }
}
