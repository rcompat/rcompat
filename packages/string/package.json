{
  "name": "@rcompat/string",
  "version": "0.10.0",
  "description": "Standard library string abtractions",
  "bugs": "https://github.com/rcompat/rcompat/issues",
  "license": "MIT",
  "files": [
    "/lib/**/*.js",
    "/lib/**/*.d.ts",
    "!/**/*.spec.*"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/rcompat/rcompat",
    "directory": "packages/string"
  },
  "scripts": {
    "build": "npm run clean && tsc",
    "test": "npm run build && npx proby",
    "clean": "rm -rf ./lib",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "@rcompat/assert": "workspace:^"
  },
  "type": "module",
  "imports": {
    "#native": {
      "apekit": "./src/private/native/node.ts",
      "bun": "./lib/private/native/bun.js",
      "deno": "./lib/private/native/deno.js",
      "default": "./lib/private/native/node.js"
    },
    "#native/type": {
      "apekit": "./src/private/native/type.ts"
    },
    "#*": {
      "apekit": "./src/private/*.ts",
      "default": "./lib/private/*.js"
    }
  },
  "exports": {
    "./*": {
      "apekit": "./src/public/*.ts",
      "default": "./lib/public/*.js"
    }
  }
}
